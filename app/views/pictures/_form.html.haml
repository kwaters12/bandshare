= simple_form_for([@album, @picture], html: { class: 'form-horizontal' }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :asset, as: :file
    = bootstrap_paperclip_picture f, :asset
    = f.input :caption
    = f.input :description, input_html: { class: 'input-xxlarge', rows: 4 }
  .form-actions
    = f.button :submit